    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000/moduleA",
            "pathMapping": {
                "/": "${workspaceFolder}/www",
                "/lib": "${workspaceFolder}/fw1/lib",
                "/moduleA": "${workspaceFolder}/fw1/moduleA",
                "/moduleB": "${workspaceFolder}/fw1/moduleB",
                "/moduleC": "${workspaceFolder}/fw2/moduleC"
            }
        }
    ]
}